<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Aboutme">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/foto_profil"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/profil" />

    <TextView
        android:id="@+id/nama_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foto_profil"
        android:layout_centerHorizontal="true"
        android:text="@string/nama_profil"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/email_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_profil"
        android:layout_centerHorizontal="true"
        android:text="@string/email_profil"
        android:textColor="@color/black"
        android:textSize="12sp" />

</RelativeLayout>
